{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ProjectConfiguration",
  "type": "object",
  "properties": {
    "base": {
      "type": "boolean",
      "default": false
    },
    "cache": {
      "$ref": "#/$defs/CacheConfiguration",
      "default": {
        "enabled": false,
        "key": {
          "defaults": false,
          "env": [],
          "files": []
        }
      }
    },
    "dependencies": {
      "$ref": "#/$defs/ListConfig",
      "default": {
        "append": []
      }
    },
    "env": {
      "$ref": "#/$defs/ProjectEnvConfiguration",
      "default": {
        "files": [],
        "vars": {}
      }
    },
    "extends": {
      "type": "array",
      "default": [],
      "items": {
        "$ref": "#/$defs/OmniPath"
      }
    },
    "name": {
      "type": "string"
    },
    "tasks": {
      "$ref": "#/$defs/DictConfig",
      "default": {}
    }
  },
  "required": [
    "name"
  ],
  "$defs": {
    "CacheConfiguration": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "key": {
          "$ref": "#/$defs/CacheKeyConfiguration"
        }
      },
      "required": [
        "key"
      ]
    },
    "CacheKeyConfiguration": {
      "type": "object",
      "properties": {
        "defaults": {
          "type": "boolean",
          "default": true
        },
        "env": {
          "$ref": "#/$defs/ListConfig",
          "default": {
            "append": []
          }
        },
        "files": {
          "$ref": "#/$defs/ListConfig2",
          "default": {
            "append": []
          }
        }
      }
    },
    "DictConfig": {
      "anyOf": [
        {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/$defs/TaskConfiguration"
          }
        },
        {
          "type": "object",
          "properties": {
            "merge": {
              "type": "object",
              "additionalProperties": {
                "$ref": "#/$defs/TaskConfiguration"
              }
            }
          },
          "required": [
            "merge"
          ]
        },
        {
          "type": "object",
          "properties": {
            "replace": {
              "type": "object",
              "additionalProperties": {
                "$ref": "#/$defs/TaskConfiguration"
              }
            }
          },
          "required": [
            "replace"
          ]
        }
      ]
    },
    "DictConfig2": {
      "anyOf": [
        {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        {
          "type": "object",
          "properties": {
            "merge": {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              }
            }
          },
          "required": [
            "merge"
          ]
        },
        {
          "type": "object",
          "properties": {
            "replace": {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              }
            }
          },
          "required": [
            "replace"
          ]
        }
      ]
    },
    "ListConfig": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "$ref": "#/$defs/string"
          }
        },
        {
          "type": "object",
          "properties": {
            "merge": {
              "type": "array",
              "items": {
                "$ref": "#/$defs/string"
              }
            }
          },
          "required": [
            "merge"
          ]
        },
        {
          "type": "object",
          "properties": {
            "append": {
              "type": "array",
              "items": {
                "$ref": "#/$defs/string"
              }
            }
          },
          "required": [
            "append"
          ]
        },
        {
          "type": "object",
          "properties": {
            "prepend": {
              "type": "array",
              "items": {
                "$ref": "#/$defs/string"
              }
            }
          },
          "required": [
            "prepend"
          ]
        },
        {
          "type": "object",
          "properties": {
            "replace": {
              "type": "array",
              "items": {
                "$ref": "#/$defs/string"
              }
            }
          },
          "required": [
            "replace"
          ]
        }
      ]
    },
    "ListConfig2": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "$ref": "#/$defs/OmniPath"
          }
        },
        {
          "type": "object",
          "properties": {
            "merge": {
              "type": "array",
              "items": {
                "$ref": "#/$defs/OmniPath"
              }
            }
          },
          "required": [
            "merge"
          ]
        },
        {
          "type": "object",
          "properties": {
            "append": {
              "type": "array",
              "items": {
                "$ref": "#/$defs/OmniPath"
              }
            }
          },
          "required": [
            "append"
          ]
        },
        {
          "type": "object",
          "properties": {
            "prepend": {
              "type": "array",
              "items": {
                "$ref": "#/$defs/OmniPath"
              }
            }
          },
          "required": [
            "prepend"
          ]
        },
        {
          "type": "object",
          "properties": {
            "replace": {
              "type": "array",
              "items": {
                "$ref": "#/$defs/OmniPath"
              }
            }
          },
          "required": [
            "replace"
          ]
        }
      ]
    },
    "OmniPath": {
      "type": "string"
    },
    "ProjectEnvConfiguration": {
      "type": "object",
      "properties": {
        "files": {
          "$ref": "#/$defs/ListConfig",
          "default": {
            "append": []
          }
        },
        "vars": {
          "$ref": "#/$defs/DictConfig2",
          "default": {}
        }
      }
    },
    "TaskConfiguration": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "$ref": "#/$defs/TaskConfigurationLongForm"
        }
      ]
    },
    "TaskConfigurationEnvConfiguration": {
      "type": "object",
      "properties": {
        "vars": {
          "anyOf": [
            {
              "$ref": "#/$defs/DictConfig2"
            },
            {
              "type": "null"
            }
          ]
        }
      }
    },
    "TaskConfigurationLongForm": {
      "type": "object",
      "properties": {
        "cache": {
          "$ref": "#/$defs/CacheConfiguration",
          "default": {
            "enabled": false,
            "key": {
              "defaults": false,
              "env": [],
              "files": []
            }
          }
        },
        "command": {
          "type": "string",
          "default": ""
        },
        "dependencies": {
          "$ref": "#/$defs/ListConfig",
          "default": {
            "append": []
          }
        },
        "description": {
          "type": [
            "string",
            "null"
          ],
          "default": null
        },
        "env": {
          "$ref": "#/$defs/TaskConfigurationEnvConfiguration",
          "default": {
            "vars": null
          }
        },
        "output": {
          "$ref": "#/$defs/TaskOutputConfiguration",
          "default": {
            "files": {
              "append": []
            },
            "logs": true
          }
        }
      }
    },
    "TaskOutputConfiguration": {
      "type": "object",
      "properties": {
        "files": {
          "$ref": "#/$defs/ListConfig2",
          "default": {
            "append": []
          }
        },
        "logs": {
          "type": "boolean",
          "default": true
        }
      }
    },
    "string": {
      "type": "string"
    }
  }
}
